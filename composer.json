{
    "name": "macfja/phar-builder",
    "description": "CLI tool for create phar of your composer based project",
    "license": "MIT",
    "authors": [
        {
            "name": "MacFJA"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "~2.7 || ^3.0",
        "macfja/symfony-console-filechooser": "~0.2",
        "rych/bytesize": "~1.0",
        "webignition/readable-duration": "^0.2",
        "league/event": "^2.1",
        "symfony/process": "^2.7 || ^3.0",
        "neutron/signal-handler": "^1.0"
    },
    "autoload": {
        "psr-4": {"MacFJA\\PharBuilder\\": "app/"}
    },
    "bin": ["bin/phar-builder", "bin/phar-builder.php"],
    "extra": {
        "phar-builder": {
            "skip-shebang": false,
            "include-dev": false,
            "entry-point": "bin/phar-builder.php",
            "compression": "No",
            "name": "phar-builder.phar",
            "output-dir": "./",
            "include": ["bin"]
        }
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "vimeo/psalm": "^0.3.55",
        "edgedesign/phpqa": "^1.15"
    },
    "scripts": {
        "qa-details": [
            "phpqa --analyzedDirs app/ --verbose --tools phpmetrics,phploc,phpcs:0,phpmd:0,phpcpd:0,parallel-lint:0,psalm:0"
        ],
        "qa": [
            "phpqa --analyzedDirs app/ --report --tools phpmetrics,phploc,phpcs:0,phpmd:0,phpcpd:0,parallel-lint:0,psalm:0"
        ]
    }
}
